<?xml version="1.0" encoding="UTF-8"?>
<!-- Pega aquÃ­ tu template Ticket -->
<odoo>
<template id="assets_frontend" inherit_id="web.assets_frontend" name="invoice_multi_report_assets" priority="100">
<xpath expr="link[last()]" position="after">
<link rel="stylesheet" type="text/css" href="/invoice_multi_report/static/src/css/ticket.css"/>
</xpath>
</template>
<template id="report_invoice_ticket_template">
<t t-call="web.html_container">
<div class="ticket-paper">
<div class="ticket-header">
<h3 class="small bold">Mi Empresa S.L.</h3>
<div class="small">C/ Ejemplo, 1 - CIF: X12345678</div>
<div class="small mt8">
Factura:
<t t-esc="doc.name"/>
</div>
<div class="small">
Fecha:
<t t-esc="doc.invoice_date or doc.date"/>
</div>
</div>
<hr/>
<table class="ticket-lines">
<t t-foreach="doc.invoice_line_ids" t-as="l">
<tr>
<td>
<t t-esc="l.product_id.name or l.name"/>
</td>
<td class="right">
<t t-esc="(l.quantity)"/>
x
<t t-esc="l.price_unit"/>
</td>
</tr>
<tr>
<td colspan="2" class="right small">
<t t-esc="l.price_total"/>
</td>
</tr>
</t>
</table>
<hr/>
<table width="100%" class="small">
<tr>
<td>Subtotal</td>
<td class="right">
<t t-esc="doc.amount_untaxed"/>
</td>
</tr>
<tr>
<td>Impuestos</td>
<td class="right">
<t t-esc="doc.amount_tax"/>
</td>
</tr>
<tr class="bold">
<td>Total</td>
<td class="right">
<t t-esc="doc.amount_total"/>
</td>
</tr>
</table>
<div class="small ticket-footer mt8"> Gracias por su compra </div>
</div>
</t>
</template>
<report id="report_invoice_ticket" string="Factura Ticket" model="account.move" report_type="qweb-pdf" name="invoice_multi_report.report_invoice_ticket_template" file="invoice_multi_report.report_invoice_ticket_template" attachment_use="False"/>
</odoo>
